{
  "name": "topicos-typescript",
  "version": "1.0.0",
  "description": "Proyecto Node.js con TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "build:start": "tsc && node dist/server.js",
    "test:db": "ts-node src/config/database.ts",
    "inspect-db": "ts-node src/inspect-db.ts",
    "test:recommendations": "ts-node src/test-recommendations.ts"
  },
  "keywords": [
    "typescript",
    "node",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.18.8",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "mongodb": "^6.20.0"
  }
}
